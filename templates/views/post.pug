extends ../layouts/default
//-include ../mixins/social/social-share

block content
	//-article
		if data.post.image.exists
			.parallax-container
					.parallax
						img(src= data.post.image.url)
		.container
			.post--content
				if !data.post
					h2 Post inválido.
				else
					.card
						.card-content
							h2= data.post.title
							!= data.post.content.full

	.container
		article
			p: a(href='/blog') &larr; voltar ao blog
			hr
			if !data.post
				h2 Post inválido.
			else
				header
					h2= data.post.title
					//+share()
					p.thin: small Publicado 
						if data.post.publishedDate
							| a #{data.post._.publishedDate.format('D MMM, YYYY')} 
						if data.post.categories && data.post.categories.length
							| em 
							each cat, i in data.post.categories
								a(href='/blog/' + cat.key)= cat.name
								if i < data.post.categories.length - 1
									| , 
								else
									|  
						if data.post.author
							| por #{data.post.author.name.full}
					
				.post
					if data.post.image.exists
						.image-wrap: img(src=data.post._.image.fit(750,450)).img-responsive
					!= data.post.content.full


